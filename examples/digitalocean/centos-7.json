{
  "variables": {
    "api_token": "{{env `DIGITALOCEAN_TOKEN`}}"
  },
  "provisioners": [
    {
      "type": "cnspec",
      "on_failure": "continue"
    }
  ],
  "builders": [
    {
      "type": "digitalocean",
      "api_token": "{{user `api_token`}}",
      "image": "centos-7-x64",
      "ssh_username": "root", 
      "region": "nyc1",
      "size": "s-4vcpu-8gb"
    }
  ]
}